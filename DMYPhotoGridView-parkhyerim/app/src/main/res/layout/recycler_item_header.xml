<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/header_left_padding"
    android:layout_marginBottom="@dimen/header_bottom_margin"
    android:background="@color/background">

    <TextView
        android:id="@+id/recycler_item_header_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_shadow_height"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/group_text_size" />
</LinearLayout>